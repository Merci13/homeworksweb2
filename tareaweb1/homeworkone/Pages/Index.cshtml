@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://riot-web-static.s3.amazonaws.com/images/news/Skin_Sales/Leona_Valkyrie_Splash.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Firts Image
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://riot-web-static.s3.amazonaws.com/images/news/Skin_Sales/Tryndamere_Viking_Splash.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Second Image.
                   
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://riot-web-static.s3.amazonaws.com/images/news/Skin_Sales/Cassiopeia_JadeFang_Splash.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Thirt Image
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/Twitch_5.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                  Fourth Image
                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


